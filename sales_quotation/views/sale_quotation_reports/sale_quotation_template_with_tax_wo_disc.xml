<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Paper Format -->
        <record id="woo_sale_quotation_template_with_taxes_wo_disc" model="report.paperformat">
            <field name="name">Woo - Sales Quotation Template With Taxes W/O Discount</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">42</field>
            <field name="margin_bottom">30</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">38</field>
            <field name="dpi">90</field>
        </record>

        <record id="woo_quote_with_breakup_report_wo_disc" model="ir.actions.report">
            <field name="name">WOO Quotation With Taxes W/O Discount</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sales_quotation.sales_quotation_template_with_taxes_wo_disc</field>
            <field name="report_file">sales_quotation.sales_quotation_template_with_taxes_wo_disc</field>
            <field name="print_report_name">(object.state in ('draft', 'sent') and 'WOO Quotation - %s -R%s (WT/WOD)' % (object.name, '{:02}'.format(object.revision_number_sq)) or 'WOO Quotation - %s -R%s (WT/WOD)' % (object.name, '{:02}'.format(object.revision_number_sq)))</field>
            <!-- <field name="binding_model_id" ref="sale.model_sale_order"/> -->
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="sales_quotation.woo_sale_quotation_template_with_taxes_wo_disc"/>
 
        </record>
    
       
        <template id="sales_quotation_template_with_taxes_wo_disc">
         
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                 <t t-if="not o and doc">
                        <t t-set="o" t-value="doc"/>
                    </t>

                    <t t-if="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id.sudo()"/>
                    </t>
                    <t t-if="not o or not 'company_id' in o">
                        <t t-set="company" t-value="res_company"/>
                    </t>
                   
                    <t t-call="sales_quotation.external_layout_for_headerfooter">
                    
                       <!-- <div style="border:2px solid maroon;"> -->
                        <div >
                            <div class="page" style="padding:20px;" >
                             <table class="table table-sm  " width="100%" style="width:100%;">
                                <tr>
                                    <td style="border-top:none !important;">
                                    
                                         <div class="row" >
                                            
                                            <div class="col-6">
                                              
                                               <b><span t-esc="'Invoicing Name &amp; Address:'" style="font-size:14px;"/></b>
                                                <t t-if="o.partner_id" class="text-center">
                                                    <span t-field="o.partner_id" style="font-size:14px;"/><a>,</a><br/>
                                                </t>

                                                <t t-if="o.partner_id.street" class="text-center">
                                                    <span t-field="o.partner_id.street" style="font-size:14px;"/><a>,</a>
                                                </t>
                                               
                                                <t t-if="o.partner_id.street2" class="text-center">
                                                    <span t-field="o.partner_id.street2" style="font-size:14px;"/><a>,</a>
                                                </t>

                                                <t t-if="o.partner_id.city" class="text-center">
                                                   <span t-field="o.partner_id.city" style="font-size:14px;"/><a>,</a>
                                                </t>

                                                <t t-if="o.partner_id.country_id" class="text-center">
                                                    <span t-field="o.partner_id.country_id" style="font-size:14px;"/>
                                                </t>

                                                <t t-if="o.partner_id.vat" class="text-center">
                                                    <h6 style="font-size:14px;"><b><t t-esc="'Your VAT # : '"/></b><span t-field="o.partner_id.vat"/></h6>
                                                </t>

                                                <t t-else="">
                                                  <h6 style="font-size:14px;"><b><t t-esc="'Your VAT # : '"/></b><span >N/A</span></h6>
                                                </t>

                                                
                                                <t t-if="o.partner_id.business_name" class="text-center">
                                                    <h6 style="font-size:14px;"><b><t t-esc="'Business Name : '"/></b><span t-field="o.partner_id.business_name"/> </h6>
                                                </t>
                                                
                                                

                                                <t t-set="cp" t-value="o.partner_id.child_ids.filtered(lambda l: l.type in ('contact'))[:1]"/>
                                                <t t-if="cp" class="text-center">
                                               
                                                    <h6 style="font-size:14px;"><b><t t-esc="'Contact Person: '"/></b><t ><span t-field="cp.name"/></t> </h6>
                                                </t>

                                                <t t-set="cp" t-value="o.partner_id.child_ids.filtered(lambda l: l.type in ('contact'))[:1]"/>
                                                <t t-if="cp" class="text-center">
                                                    <h6 style="font-size:14px;"><i class="fa fa-phone" aria-hidden="true">&amp;nbsp;&amp;nbsp;</i>
                                                    
                                                    <t t-if="cp.phone">
                                                    <span t-field="cp.phone"/>  &amp;nbsp;&amp;nbsp;
                                                    </t>

                                                    <t t-else="">
                                                    <span t-esc="'N/A'"/>  &amp;nbsp;&amp;nbsp;
                                                    </t>


                                                    <i class="fa fa-envelope" aria-hidden="true"></i> 
                                                    
                                                    <t t-if="cp.email">
                                                    <span t-field="cp.email"/> 
                                                    </t>

                                                    <t t-else="">
                                                    <span t-esc="'N/A'"/>
                                                    </t>
                                                     </h6>
                                                    
                                                </t>
                                                <!-- <t t-if="o.partner_id.phone" class="text-center">
                                                    <h6 style="font-size:14px;"><i class="fa fa-phone" aria-hidden="true">&amp;nbsp;&amp;nbsp;
                                                    </i><span t-field="o.partner_id.phone"/>  &amp;nbsp;&amp;nbsp;<i class="fa fa-envelope" aria-hidden="true"></i> <span t-field="o.partner_id.email"/> 
                                                     </h6>
                                                    
                                                </t> -->

                                               <t t-if="o.client_order_ref" class="text-center">
                                                            <h6 style="font-size:14px;"><b><t t-esc="'Your Ref : '"/></b><span t-field="o.client_order_ref"/> </h6>
                                                     </t>
                                                    <t t-else="">
                                                            <h6 style="font-size:14px;"><b><t t-esc="'Your Ref : '"/></b><span>N/A</span> </h6>
                                                    </t>
                                                   
                                                   <t t-if="o.currency_id" class="text-center">
                                                        <h6 style="font-size:14px;"><b><t t-esc="'Currency : '"/></b><span t-field="o.currency_id.name"/> </h6>
                                                    </t>

                                                    
                                               

                                                

                                            </div>

                                            <div class="col-6">
                                              <div class="row" style="">
                                                 <div class="col" style="">

                                                    <t t-if="o.date_order" class="text-center">
                                                        <h6 style="font-size:14px;"><b><t t-esc="'Quotation Date: '"/></b><span t-esc="o.date_order.strftime('%d %b %Y')" > </span> </h6>
                                                    </t>

                                                    <t t-if="o.user_id" class="text-center">
                                                        <h6 style="font-size:14px;"><b><t t-esc="'Salesperson: '"/></b><span t-field="o.user_id"/> </h6>
                                                    </t>

                                                    <t class="text-center">
                                                        
                                                        
                                                        <h6 style="font-size:14px;">

                                                        <t t-if="o.user_id.partner_id.phone">
                                                        <i class="fa fa-phone" aria-hidden="true">&amp;nbsp;&amp;nbsp;
                                                        </i><span t-field="o.user_id.partner_id.phone"/> &amp;nbsp;&amp;nbsp;
                                                        </t>

                                                        <t t-else="">
                                                        <i class="fa fa-phone" aria-hidden="true">&amp;nbsp;&amp;nbsp;
                                                        </i><span t-esc="'N/A'"/> &amp;nbsp;&amp;nbsp;
                                                        </t>
                                                        
                                                        <t t-if="o.user_id.partner_id.email">
                                                        <i class="fa fa-envelope" aria-hidden="true"></i> 
                                                        <span t-field="o.user_id.partner_id.email"/> 
                                                        </t>

                                                        <t t-else="">
                                                        <i class="fa fa-envelope" aria-hidden="true"></i> 
                                                        <span t-esc="'N/A'"/> 
                                                        </t>

                                                        </h6>
                                                    </t>


                                                    <t t-if="o.team_id" class="text-center">
                                                        <h6 style="font-size:14px;"><b><t t-esc="'Division : '"/></b><span t-field="o.team_id"/> </h6>
                                                    </t>

                                                    <!-- <t class="text-center">
                                                    <t t-set="qdate" t-value="request.env.company.quotation_validity_days"/>
                                                        <h6 style="font-size:14px;"><b><t t-esc="'Quotation Validity : '"/></b><span t-esc="qdate"> </span>&amp;nbsp;&amp;nbsp; Days </h6>
                                                    </t> -->

                                                    <t t-if="o.validity_date" class="text-center">
                                                        <h6 style="font-size:14px;"><b><t t-esc="'Quotation Expiry Date : '"/></b><span t-esc="o.validity_date.strftime('%d %b %Y')"> </span></h6>
                                                    </t>

                                                    

                                                    <t t-if="o.partner_shipping_id" class="text-center">
                                                    <h6 style="font-size:14px;"><b><t t-esc="'Delivery Address : '"/></b><span t-field="o.partner_shipping_id"/><a>,</a></h6></t>
                                            
                                                    <t t-if="o.partner_shipping_id.street"> <span t-field="o.partner_shipping_id.street" style="font-size:14px;"></span><a>,</a></t>
                                                    <t t-if="o.partner_shipping_id.street2"> <span t-field="o.partner_shipping_id.street2" style="font-size:14px;"></span><a>,</a></t>
                                                    <t t-if="o.partner_shipping_id.city"> <span t-field="o.partner_shipping_id.city" style="font-size:14px;"></span><a>,</a></t>
                                                    <t t-if="o.partner_shipping_id.country_id"> <span t-field="o.partner_shipping_id.country_id" style="font-size:14px;"/></t>
                                                   
                                                 </div>
                                              </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </table>     

                            <h6 style="margin-top:10px;"><i>In response to your inquiry, we are pleased to submit the following quotation.</i></h6>
                            <table class="table table-sm table-bordered " width="100%" style="width:100%;border:none;">
                                <thead>
                                    <tr>
                                       
                                            <th style="text-align:center;border: 1px solid;font-size:15px;width:1%">S.N</th> 
                                           <th colspan="3" style="text-align:center;border: 1px solid;font-size:15px;">Description</th>
                                           <th style="text-align:center;border: 1px solid;font-size:15px;">Image</th>
                                           <th style="text-align:center;border: 1px solid;font-size:15px;width:15%">Unit Price</th>
                                           <th style="text-align:center;border: 1px solid;font-size:15px;width:15%">Qty</th>
                                          <th style="text-align:center;border: 1px solid;width:15%">Amount</th>
                                       
                                    </tr>
                                </thead>

                                 <tbody>
                                    <t t-set="i" t-value="1"/>
                                    <t t-set="tot_unitqty" t-value="0.0" />
                                    <t t-set="tot_discount" t-value="0.0" />
                                    <t t-set="sub_total" t-value="0.0" />
                                   
                                    
                                     <tr t-foreach="o.order_line" t-as="l">
                                        <td class="text-center" style="border: 1px solid;" >
                                            <span t-esc="i"/>
                                        </td>
                                        <t t-set="i" t-value="i+1"/>
                                        <td class="text-left" colspan="3" style="width:35%;border: 1px solid;font-size:15px;" >
                                           
                                            <span t-field="l.name"/>  
                                        </td>

                                         <td class="text-left" style="padding: 10px;border: 1px solid;font-size:15px;width:10%;height:10%">
                                           <span style="height:150px;width:150px;" t-field="l.product_id.image_256"
                                            t-options="{&quot;widget&quot;: &quot;image&quot;, &quot;class&quot;: &quot;img-square w-100&quot; }"/>
                                        </td>

                                       

                                        <td class="text-right" style="border: 1px solid;font-size:15px;">
                                            <b><span t-esc="'{:,.2f}'.format(l.price_subtotal / l.product_uom_qty)"/></b>  
                                            <t t-set="tot_unitqty" t-value="tot_unitqty + (l.price_unit * l.product_uom_qty)"/>
                                        </td>
                                        <td class="text-right" style="border: 1px solid;" >
                                           <b><span t-field="l.product_uom_qty"/></b> <b><span t-field="l.product_uom"/></b>
                                        </td>

                                        <td class="text-right" style="border: 1px solid;font-size:15px;" >
                                          
                                          <b><span t-esc="'{:,.2f}'.format(l.price_subtotal)" /></b>
                                         <t t-set="line_sub_total" t-value="(l.price_subtotal)"/>
                                         <t t-set="sub_total" t-value="sub_total + line_sub_total"/>

                                         <!-- <b><span t-esc="'{:,.2f}'.format(l.price_unit * l.product_uom_qty)" /></b>
                                         <t t-set="line_sub_total" t-value="(l.price_unit * l.product_uom_qty)"/>
                                         <t t-set="sub_total" t-value="sub_total + line_sub_total"/> -->

                                        <!-- <t t-set="line_discount" t-value="((l.price_unit * l.product_uom_qty)*l.discount/100)"/>
                                        <t t-set="tot_discount" t-value="tot_discount + line_discount"/> -->
                                          
                                        </td>
                  
                 
                                     </tr>

                                     <tr>
                                        <td colspan="6" t-att-rowspan="6 if tot_discount != 0.0 else 7" style="border:none !important;font-size:15px;vertical-align:bottom;">
                                         <i>
                                          <h6 style="font-size:15px;" > <b> <t t-esc="'Grand total in words: '"/></b> 
                                          <b><span style="font-size:15px; line-height:0px;" t-esc="o.amount_to_text(o.amount_total)"/></b></h6>
                                         </i>
                                          
                                        </td>

                                        <td class="text-right" style="border: 1px solid;font-size:15px;">
                                             <h6 style="color:maroon"><b><t t-esc="'Sub Total'"/></b></h6>
                                        </td>
                                         <td class="text-right" style="border: 1px solid;font-size:15px;">
                                             <b><span t-esc="'{:,.2f}'.format(sub_total)"/></b>
                                        </td>
                                        
                                         


                                     </tr>
                                     

                                    <!-- <t t-if="tot_discount != 0.0">
                                        <tr>
                                       
                                        <td class="text-right" style="border: 1px solid;font-size:15px;">
                                             <b style="color:maroon"><t t-esc="'Discount'"/></b>
                                        </td>
                                         <td class="text-right" style="border: 1px solid;font-size:15px;">
                                             <b ><span t-esc="'{:,.2f}'.format(tot_discount)"/></b>
                                        </td>

                                        </tr>
                                     </t>

                                    <t t-if="tot_discount != 0.0">
                                    <tr>
                                        <td class="text-right" style="border: 1px solid;font-size:15px;">
                                             <h6 style="color:maroon"><b><t t-esc="'Sub Total 2'"/></b></h6>
                                        </td>
                                         <td class="text-right" style="border: 1px solid;font-size:15px;">
                                             <b><span t-esc="'{:,.2f}'.format(sub_total-tot_discount)"/></b>
                                        </td>
                                    </tr>
                                     </t> -->

                                    <t t-foreach="o.amount_by_group" t-as="tx">
                                      <tr>
                                        <td class="text-right" style="border: 1px solid;font-size:15px;">
                                        
                                             <h6 style="color:maroon"><b>Taxes <span t-esc="tx[0]"/></b></h6>
                                      
                                        </td>

                                         <td class="text-right" style="border: 1px solid;font-size:15px;">
                                            
                                          
                                           
                                            <b><span t-esc="'{:,.2f}'.format(tx[1])"/></b>
                                            
                                            
                                    
                                        </td>
                                    </tr>
                                    </t>


                                    

                                     <tr>
                                        
                                        <td class="text-right" style="background-color:maroon;border-color:maroon;border-top-color: maroon;border: 1px solid;font-size:15px;">
                                             <h6 style="color:white"><b><t t-esc="'Grand Total'"/></b></h6>
                                        </td>
                                         <td class="text-right" style="background-color:maroon; border-color:maroon;border-top-color: maroon;border: 1px solid;font-size:15px;">
                                             <b><span style="color:white" t-esc="'{:,.2f}'.format(o.amount_total)"/></b>
                                        </td>

                                     </tr>
                                
                                </tbody>
                            </table>  

                           <div style="line-height:1.4;page-break-inside: avoid !important;">
                                <t t-if="o.note">
                                <i><b style="font-size:14px;"><t t-esc="'Terms and Conditions :'"/></b></i><br/>
                                <span t-field="o.note" style="font-size:14px;"/><br/>
                                </t>
                                <i><b style="font-size:14px;"><t t-esc="'Warranty : '"></t></b></i>
                                <span t-field="o.warrenty" style="font-size:15px;"/><br/>
                                <i><b style="font-size:14px;"><t t-esc="'Delivery Period : '"></t></b></i><span style="font-size:15px;" t-field="o.delivery_period"/><br/>
                                <i><b style="font-size:14px;"><t t-esc="'Delivery Terms: '"></t></b></i><span t-field="o.incoterm" style="font-size:15px;"/> <br/>
                                <i><b style="font-size:14px;"><t t-esc="'Payment Terms : '" ></t></b></i><span t-field="o.payment_term_id" style="font-size:15px;"/><br/>
                                <i><b style="font-size:14px;"><u><t t-esc="'Payment instructions'"/></u></b></i><br/>
                                <span t-field="company.payment_instructions" style="font-size:14px;"/><br/>
                                <b style="font-size:14px;"><i><t t-esc="' Bank : '"></t></i><span t-field="o.bank_id"/>&amp;nbsp;&amp;nbsp;<i><t t-esc="'A/C No :'"/></i><span t-field="o.bank_account_id"/></b><br/>
                                <i style="font-size:14px;"><t  t-esc="'If you require any further clarification, Please. do not hesitate to communicate with us.'"></t></i><br/>


                            </div>
                            
                              <div class="row" style = "margin-top:0px;position:relative;text-align:center;page-break-inside: avoid !important;">
                                <div class="col-6" style="text-align:left;">
                                    <label style="font-size:16px;"><strong>Prepared By :  </strong><span t-field="o.user_id"/></label>
                                </div>
                                 <div class="col-6" style="text-align:right;">
                                <t t-set="auth" t-value="request.env['mail.message'].search([('model','=','sale.order'),('res_id','=',o.id),('subtype_id','=',request.env.ref('sales_discount_woo.sq_order_approved').id)])"/>
                                    <label style="font-size:16px;"><strong>Authorized By:</strong>
                                    <t t-if="auth">
                                        <span t-field="auth.create_uid"></span>
                                    </t>
                                    </label>
                                </div>
                                
                            </div>

                            <div class="row" style="margin-top:5px;page-break-inside: avoid !important;">
                               <div class="col-12">
                                     <h6 class="text-center" style="font-size:15px;color:red"><b>Note:</b> <span t-field="company.info_msg"/></h6>
                               </div>
                            </div>
                            
                        </div>
                        </div>
                       
                    </t>
                   
                </t>
            </t>
             <!-- </div> -->
        </template>

        
    </data>
</odoo>  